<resources>

    <declare-styleable name="MaterialPasswordEditText">
        <!-- Reveal button -->
        <attr name="revealButton" format="boolean" />
        <!-- Reveal sticky mode -->
        <attr name="revealStickyMode" format="boolean" />
        <!-- Padding between icon(s) and the main area. 8dp by default. -->
        <attr name="met_iconPadding" />
        <!-- Reveal Icon -->
        <attr name="met_revealIcon" format="integer" />
        <!-- Unreveal Icon -->
        <attr name="met_unrevealIcon" format="integer" />
    </declare-styleable>

    <declare-styleable name="MaskedEditText">
        <attr name="msk_mask" format="string"/>
        <attr name="msk_char_representation" format="string" />
        <attr name="msk_mask_fill" format="string" />
    </declare-styleable>
    
    <declare-styleable name="StatusBarSpacer">
        <attr name="statusBackground" format="reference|color" />
    </declare-styleable>

</resources>