<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/WHITE">
    <item>
        <selector>
            <!-- disabled state -->
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/view_corner" />
                    <solid android:color="@color/btn_default_disabled" />
                    <padding android:bottom="@dimen/button_vertical_padding"
                        android:left="@dimen/button_horizontal_padding"
                        android:right="@dimen/button_horizontal_padding"
                        android:top="@dimen/button_vertical_padding" />
                </shape>
            </item>

            <!-- normal state -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/view_corner" />
                    <solid android:color="@color/btn_default_normal" />
                    <padding android:left="@dimen/button_horizontal_padding"
                        android:top="@dimen/button_vertical_padding"
                        android:right="@dimen/button_horizontal_padding"
                        android:bottom="@dimen/button_vertical_padding" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>