<resources>

    <!-- Window background Color start -->
    <color name="window_background">@color/MAIN_WHITE</color>
    <!-- Window background Color end -->

    <!-- Text Colors start -->
    <color name="primary_text">@color/DARK_GRAY</color>
    <color name="primary_text_inverse">@color/WHITE</color>

    <color name="secondary_text">@color/DARK_GRAY_50</color>
    <color name="secondary_text_inverse">@color/WHITE_50</color>

    <color name="tertiary_text">@color/AQUAMARINE</color>
    <color name="tertiary_text_inverse">@color/MAIN_WHITE</color>
    <!-- Text Colors end -->

    <!-- Default Button start -->
    <color name="btn_default_normal">@color/AQUAMARINE</color>
    <color name="btn_default_focused">@color/AQUAMARINE_40</color>
    <color name="btn_default_pressed">@color/AQUAMARINE_40</color>
    <color name="btn_default_disabled">@color/DARK_GRAY_25</color>
    <!-- Default Button end -->

    <!-- Default Button start -->
    <color name="btn_inverse_normal">@color/WHITE</color>
    <color name="btn_inverse_focused">@color/WHITE_40</color>
    <color name="btn_inverse_pressed">@color/WHITE_40</color>
    <color name="btn_inverse_disabled">@color/DARK_GRAY_25</color>
    <!-- Default Button end -->

    <!-- Default EditText start -->
    <color name="edittext_default_normal">@color/DARK_GRAY</color>
    <color name="edittext_default_disabled">@color/DARK_GRAY_25</color>
    <color name="edittext_default_selected">@color/AQUAMARINE</color>
    <!-- Default EditText end -->

    <!-- Default Spinner start -->
    <color name="spinner_default_normal">@color/DARK_GRAY</color>
    <color name="spinner_default_disabled">@color/DARK_GRAY_25</color>
    <color name="spinner_default_selected">@color/AQUAMARINE</color>
    <!-- Default Spinner end -->
</resources>